<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.benallen.jeeves.jeevescontroller.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:id="@+id/destinationText"
        android:layout_below="@+id/leftBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Who would you like to send it to?" />

    <Button
        android:text="SPEECH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speechResult"
        android:layout_alignStart="@+id/ardBtn"
        android:id="@+id/speechButton"
        android:layout_alignEnd="@+id/ardBtn" />

    <Button
        android:text="Requester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/requestBtn"
        android:layout_below="@+id/destinationText"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Connect Arduino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ardBtn"
        android:layout_below="@+id/speechButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/debugText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speechResult"
        android:layout_below="@+id/requestBtn"
        android:layout_alignStart="@+id/debugText" />

    <Button
        android:text="Right Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/leftBtn"
        android:id="@+id/rightBtn"
        android:layout_alignEnd="@+id/requestBtn" />

    <Button
        android:text="Forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forwardBtn"
        android:layout_above="@+id/destinationText"
        android:layout_toEndOf="@+id/rightBtn" />

    <Button
        android:text="Left Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/leftBtn"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/requestBtn" />

</RelativeLayout>
